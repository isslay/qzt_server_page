<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzt.bus.dao.mapper.QztPayBacklogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qzt.bus.model.QztPayBacklog">
        <result column="id_" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="back_source" property="backSource"/>
        <result column="order_no" property="orderNo"/>
        <result column="pay_no" property="payNo"/>
        <result column="pay_money" property="payMoney"/>
        <result column="back_pay_no" property="backPayNo"/>
        <result column="bus_type" property="busType"/>
        <result column="message_" property="message"/>
    </resultMap>


    <!-- 通用查询方法 -->
    <select id="find" resultMap="BaseResultMap" parameterType="map">
        SELECT * FROM dgm_qzt_pay_backlog
        <where>
            <if test="id != null and id != ''">
                AND id_ = #{id}
            </if>
            <if test="orderNo != null and orderNo != ''">
                AND order_no = #{orderNo}
            </if>
            <if test="payNo != null and payNo != ''">
                AND pay_no = #{payNo}
            </if>
            <if test="userId != null and userId != ''">
                AND create_by = #{userId}
            </if>
            <if test="backPayNo != null and backPayNo != ''">
                AND back_pay_no = #{backPayNo}
            </if>
            <if test="busType != null and busType != ''">
                AND bus_type = #{busType}
            </if>
            <if test="backSource != null and backSource != ''">
                AND back_source = #{backSource}
            </if>
        </where>
        ORDER BY create_time DESC,id_
    </select>

</mapper>
