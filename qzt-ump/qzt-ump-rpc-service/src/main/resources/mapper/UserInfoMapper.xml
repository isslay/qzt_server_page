<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzt.bus.dao.mapper.UserInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qzt.bus.model.UserInfo">
        <id column="uid" property="uid" />
        <result column="u_name" property="uName" />
        <result column="u_password" property="uPassword" />
        <result column="u_status" property="uStatus" />
        <result column="u_email" property="uEmail" />
        <result column="u_phone" property="uPhone" />
        <result column="u_unionid" property="uUnionid" />
        <result column="u_openid" property="uOpenid" />
        <result column="u_official_openid" property="uOfficialOpenid" />
        <result column="u_picture" property="uPicture" />
        <result column="u_timestamp" property="uTimestamp" />
        <result column="u_pharmacy" property="uPharmacy" />
        <result column="u_position" property="uPosition" />
        <result column="u_group" property="uGroup" />
        <result column="u_division" property="uDivision" />
        <result column="u_company" property="uCompany" />
        <result column="u_operator" property="uOperator" />
        <result column="u_update_time" property="uUpdateTime" />
        <result column="u_share_code" property="uShareCode" />
        <result column="u_share_code" property="uShareCode" />
        <result column="u_share_code" property="uShareCode" />
        <result column="pid" property="pid" />
        <result column="ph_short_name" property="phShortName" />
    </resultMap>


    <!-- 通用查询方法 -->
    <select id="find" resultMap="BaseResultMap" parameterType="map">
        SELECT * FROM user_info
        <where>
            <if test="id != null and id != ''">
                AND id_ = #{id}
            </if>
        </where>
        ORDER BY create_time DESC, id_
    </select>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT a.*,b.pid,b.ph_short_name FROM user_info a INNER JOIN pharmacy_list b on a.u_pharmacy=b.pid where u_share_code=#{id}
    </select>

</mapper>
