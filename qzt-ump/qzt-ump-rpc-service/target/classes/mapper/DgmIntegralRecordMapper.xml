<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzt.bus.dao.mapper.DgmIntegralRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qzt.bus.model.DgmIntegralRecord">
        <result column="id_" property="id" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="user_id" property="userId" />
        <result column="int_value" property="intValue" />
        <result column="active_time" property="activeTime" />
        <result column="over_time" property="overTime" />
        <result column="int_type" property="intType" />
        <result column="int_remark" property="intRemark" />
        <result column="is_del" property="isDel" />
    </resultMap>


    <!-- 通用查询方法 -->
    <select id="find" resultMap="BaseResultMap" parameterType="map">
        SELECT * FROM dgm_integral_record
        <where>
            <if test="id != null and id != ''">
                AND id_ = #{id}
            </if>
            <if test="userId != null and userId != ''">
                AND user_id = #{userId}
            </if>
        </where>
        ORDER BY create_time DESC, id_
    </select>

</mapper>
