<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzt.bus.dao.mapper.QztBusPicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qzt.bus.model.QztBusPic">
        <result column="id_" property="id" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="update_time" property="updateTime" />
        <result column="update_by" property="updateBy" />
        <result column="bus_type" property="busType" />
        <result column="bus_id" property="busId" />
        <result column="banner_name" property="bannerName" />
        <result column="banner_url" property="bannerUrl" />
        <result column="order_num" property="orderNum" />
        <result column="state" property="state" />
    </resultMap>


    <!-- 通用查询方法 -->
    <select id="find" resultMap="BaseResultMap" parameterType="map">
        SELECT * FROM dgm_qzt_bus_pic
        <where>
            <if test="id != null and id != ''">
                AND id_ = #{id}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <insert id="saveBusPics" parameterType="java.util.List">
        insert into dgm_qzt_bus_pic
        (create_time,create_by,bus_type,bus_id,banner_name,banner_url,order_num,state)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.createTime},
            #{item.createBy},
            #{item.busType},
            #{item.busId},
            #{item.bannerName},
            #{item.bannerUrl},
            #{item.orderNum},
            #{item.state}
            )
        </foreach>
    </insert>

    <select id="getBusPics" parameterType="map"  resultMap="BaseResultMap">
        select * from dgm_qzt_bus_pic
        <where>
            <if test="busId!=null and busId!=''">
                AND bus_id = #{busId}
            </if>
            <if test="busType!=null and busType!=''">
                AND bus_type = #{busType}
            </if>
            <if test="state!=null and state!=''">
                AND state = #{state}
            </if>
        </where>
        order by order_num asc ,create_time asc
    </select>


    <delete id="delBusPics"  parameterType="String">
        delete from dgm_qzt_bus_pic where bus_id = #{busId}
    </delete>

</mapper>
