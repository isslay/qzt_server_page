<!--component/select_address/select_address.wxml-->
<view bindtap='showModal'></view>
<!-- 选择收货地址 -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <view class='add'>
    <view class='addtitle'>选择收货地址
      <image class='closepic' bindtap="closes" src='https://img.jlqizutang.com/close.png'></image>
    </view>
    <view class="addpage">
      <radio-group class="radio radio_group" name="radio" bindchange="radioChange">
        <view class="addlist" wx:for="{{addressList}}" bindtap="affirm" data-index="{{index}}" wx:for-item="address" wx:for-index="index">
          <label class='lable'>
            <view class='raido'>
              <!-- <radio class="radio" value="{{index}}" checked="" color='#fff'></radio> -->
            </view>
            <view class='raidopage'>
              <view class="sa_one">
                <text>{{address.recipientName}}</text>
                <text>{{address.phone}}</text>
                <text>{{address.zipCode}}</text>
              </view>
              <view class="sa_two">{{address.address}} </view>
            </view>
          </label>
        </view>
      </radio-group>
    </view>
    <view class='addbutpage'>
      <!-- <view class="addbut" bindtap="affirm">确定</view> -->
    </view>
  </view>
</view>

<!-- 选择收货地址end -->