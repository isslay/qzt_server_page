/* component/select_address/select_address.wxss */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  height: 860rpx;
}

.add {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.addtitle {
  width: 100%;
  font-size: 30rpx;
  color: #24272b;
  border-bottom: 1px solid #f4f4f4;
  text-align: center;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
}

.addpage {
  width: 100%;
  flex: 1;
  overflow-y: scroll;
}

.addbutpage {
  width: 100%;
  height: 170rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.addbut {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #22723c;
  border-radius: 12rpx;
}

.addlist {
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  border-bottom: 1px solid #f4f4f4;
}

.lable {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
  display: flex;
}

.raido {
  /* width: 70rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio_group {
  width: 86%;
  margin-left: 50rpx;
}

.raidopage {
  flex: 1;
  padding: 20rpx 20rpx 0 0rpx;
}

radio .wx-radio-input {
  /* 自定义样式.... */
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-radius: 50%;
  border-color: #22723c !important;
  position: relative;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #22723c;
  top: 15rpx;
  display: flex;
  left: 16rpx;
  position: relative;
}

.sa_one {
  margin-bottom: 10rpx;
}

.sa_one text {
  font-size: 30rpx;
  color: #222328;
  margin-right: 60rpx;
}

.sa_two {
  font-size: 30rpx;
  color: #222328;
  padding-bottom: 20rpx;
}

.closepic {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  padding-left: 230rpx;
  padding-top: 28rpx;
}
