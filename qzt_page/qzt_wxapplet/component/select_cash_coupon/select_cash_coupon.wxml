<!--component/select_cash_coupon/select_cash_coupon.wxml-->
<view bindtap='showModal'></view>
<!-- 选择抵扣券 -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <view class='add'>
    <view class='addtitle'>
      <view class="titlelcl" bindtap="affirm">取消使用</view> 选择抵扣券
      <image class='closepic' bindtap="closes" src='https://img.jlqizutang.com/close.png'></image>
    </view>
    <view class="addpage">
      <radio-group class="radio radio_group" name="radio" bindchange="radioChange">
        <view class='list' wx:for="{{couponList}}" wx:for-index="index" wx:for-item="coupon" data-index="{{index}}" bindtap="affirm">
          <label class='lable'>
            <image class='backgroundimg' src='https://img.jlqizutang.com/se_cash_coupon_pic.png'></image>
            <view class='listleft'>
              <text>{{coupon.couponMoney}}</text>
              <span>元</span>
            </view>
            <view class='listright'>
              <view class='one'>全场商品通用（满{{coupon.fullAmountReduction}}减{{coupon.couponMoney}}元）</view>
              <view class='two'>{{coupon.activeTime}}至{{coupon.overTime}}</view>
              <view class='two'>赠送人：{{coupon.giveUserId}}</view>
            </view>
            <view class='raido'>
              <!-- <radio class="radio" value="{{index}}" checked="" color='#red'></radio> -->
            </view>
          </label>
        </view>

      </radio-group>
    </view>
    <!-- <view class='addbutpage'>
      <view class="addbut" bindtap="affirm">确定</view>
    </view> -->
  </view>
</view>