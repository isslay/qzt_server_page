checkbox .wx-checkbox-input {
  /* 自定义样式.... */
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-radius: 50%;
  border-color: #22723c !important;
  position: relative;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #22723c;
  top: 15rpx;
  display: flex;
  left: 16rpx;
  position: relative;
}

