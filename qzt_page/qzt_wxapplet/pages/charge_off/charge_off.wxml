<!--pages/charge_off/charge_off.wxml-->
<view class='order'>
	<!--Tab布局-->
	<view class='title'>
		<view class='search'>
			<image class='searchimg' src='https://img.jlqizutang.com/search.png'></image>
			<input type='text' class='searchinput' value='' confirm-type="search" bindconfirm="selectTheVerificationCode" bindinput="theVerificationCode" bindblur="theVerificationCode" placeholder="请输入核销码" placeholder-class="searchinput" />
			<button class="searchbtn" bindtap="findChargeOffOrderInfo">搜索</button>
		</view>
	</view>
	<!--内容布局-->
	<swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
		<swiper-item class='swiper'>
			<scroll-view class="sydd" wx-if="{{dataShow}}" scroll-y="true" lower-threshold="30rpx" bindscrolltolower="scrollLower">
				<view class="ddlist">
					<view class="ddlisttop">
						<view class="bh">订单编号：{{orderNo}}</view>
						<view class="zt"></view>
					</view>
					<view class="sppage{{index==0?'_first':''}}" wx:for="{{goodsList}}" wx:for-item="order" wx:for-index="index">
						<image class="sppageimg" src="{{order.goodsPic}}"></image>
						<view class="sppagexx">
							<view class="spname">{{order.goodsName}}
								<view class="gs">x{{order.buyNum}}</view>
							</view>
							<view class="je">
								商品金额：{{order.goodsPrice}}
							</view>
						</view>
					</view>

				</view>

			</scroll-view>
			<image class="zwsjimg" hidden="{{dataShow}}" src="https://img.jlqizutang.com/nodata1.png"></image>
		</swiper-item>
	</swiper>
	<view class='dzglbtn'>
		<view class='btn' bindtap='confirmTheSettlement'>确认核销</view>
	</view>


</view>