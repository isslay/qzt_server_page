/* pages/ckls/ckls.wxss */
view{
  box-sizing: border-box;
}
.ckls{
  /* position: absolute; */
  top: 0;
  bottom:0;
  left: 0;
  right: 0;
  background: #f4f4f4;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;

}
.cklspage{
  background:#ffffff;
  margin-top: 5rpx;
  padding:0 40rpx
}

.cklslist{
  border-bottom: 1px solid #f4f4f4;
  display: flex;
  padding: 20rpx 0
}
.cklslist:last-child{
  border-bottom: none
}

.ckpage{
  flex: 1
}
.name{
  font-size: 28rpx;
  color: #222328;
}
.time{
  font-size: 26rpx;
  color: #A1A6BB;
  margin-top: 20rpx;
}
.money{
  width: 190rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: rgb(167, 21, 21);
  font-size: 30rpx;
  font-weight: bold
}
.moneyadd{
  width: 190rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #22723C;
  font-size: 30rpx;
  font-weight: bold
}
.change{
  color: rgb(167, 21, 21);
}
