/* pages/fillin_goods_order/fillin_goods_order.wxss */

view {
  box-sizing: border-box;
}

.txdd {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0rpx;
  left: 0;
  right: 0;
  background: #f4f4f4;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.txddpage {
  flex: 1;
  width: 100%;
  overflow-y: auto;
}

.txddbottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.txddhj {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-top: 1px solid #f4f4f4;
}

.txddhj span {
  color: #22723c;
  font-weight: bold;
}

.txddbtn {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  background: #22723c;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
}

.xuanze {
  width: 100%;
  padding: 30rpx 40rpx;
  background: #fff;
}

.zxlist {
  display: flex;
  align-items: center;
  margin: 5rpx 0;
}

.znimg {
  width: 30rpx;
  height: 30rpx;
}

.zxname {
  flex: 1;
  font-size: 28rpx;
  padding-left: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.znimgr {
  width: 30rpx;
  height: 30rpx;
}

.spnei {
  border-top: 6rpx solid #22723c;
