  background: #fff;
}

.spneiimg {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #f4f4f4;
}

.spxiang {
  flex: 1;
  padding-left: 20rpx;
  padding-top: 5rpx;
}

.one {
  font-size: 30rpx;
  color: #24272b;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.two {
  font-size: 24rpx;
  color: #24272b;
  display: -webkit-box;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.three {
  font-size: 30rpx;
  color: #22723c;
  font-weight: bold;
}

.plist {
