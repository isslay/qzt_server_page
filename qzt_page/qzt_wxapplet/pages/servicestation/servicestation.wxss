/* pages/servicestation/servicestation.wxss */

view {
  box-sizing: border-box;
}

page {
  background: #f4f4f4;
}

.fwz {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  background: #f4f4f4;
  display: flex;
  flex-direction: column;
  padding: 30rpx 40rpx 120rpx 40rpx;
  overflow-y: auto;
}

.search {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  float: left;
}

.searchimg {
  width: 39rpx;
  height: 39rpx;
}

.searchinput {
  flex: 1;
  color: #22723c;
  font-size: 30rpx;
  height: 40rpx;
  padding-left: 20rpx;
}

.fwzpage {
  width: 100%;
  height: 100%;
  flex: 1;
  margin-top: 21rpx;
  float: left;
  margin-bottom: 20rpx;
  overflow: scroll;
}

.fwzlist {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.fwzcon {
  flex: 1;
  padding: 0 20rpx;
}

.fwzcon view {
  color: #565454;
  font-size: 28rpx;
}

.fwzcon view:first-child {
  font-weight: bold;
}

.fwzcon view:nth-child(2) {
  margin: 5rpx 0;
}

.fwzcon view:nth-child(3) {
  color: #22723c;
}

.fwzimg {
  width: 120rpx;
  height: 120rpx;
}

.fwzimgr {
  width: 30rpx;
  height: 30rpx;
}
